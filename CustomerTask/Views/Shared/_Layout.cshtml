<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CustomerTask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CustomerTask.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/3a611923b3.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
  
</head>
<body>
    <div class="d-flex px-3 pt-3 w-100" style="background-color : #303A45 ; color : grey">
        <div class="col-6  justify-content-center  d-flex rounded" style="color:white">
            <div class="searchdiv rounded" style="height : fit-content">
                <i class="fas fa-bars"></i>
                <input type="search" id="search" value="@ViewBag.Search" class="border-0 text-white" placeholder="Search Customer" />
                <i class="fas fa-search"></i>
            </div>
        </div>
        <div class="col-6 mt-2 d-flex justify-content-end">
            <ul class="nav nav-tabs align-items-end" id="myTab" role="tablist">
                <li class="nav-item d-flex" role="presentation" style="height : fit-content">
                    <button class="nav-link fw-bolder" id="listtab" data-bs-toggle="tab" data-bs-target="#list" type="button" role="tab" aria-selected="true"> <i class="fas fa-list"></i> List</button>
                </li>
            </ul>
        </div>
    </div>
    <div class="tab-content  px-3">
        <div class="d-flex w-100 p-3 my-2  justify-content-between align-items-center" id="headerdiv" style="background-color : #F7F9FA">

            <div class="h4" id="listdiv" style="color : #303A4F">
                <span id="datainfo"></span>
            </div>

            <div id="detaildiv">
                <div class="h4 mb-0 d-flex gap-2 align-items-center" style="color : #303A4F">
                    <div id="customerid" class="rounded-pill shadow text-white p-1 px-3" style="background-color : #303A4Fbf ; font-family: sans-serif"></div>
                    <span id="customername"></span>
                </div>
            </div>


            <div class="d-flex gap-3">
                <button class="add-button text-info addcustomer">
                    <svg class="add-svgIcon" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 45.402 45.402" >
                            <path d="M41.267,18.557H26.832V4.134C26.832,1.851,24.99,0,22.707,0c-2.283,0-4.124,1.851-4.124,4.135v14.432H4.141 c-2.283,0-4.139,1.851-4.138,4.135c-0.001,1.141,0.46,2.187,1.207,2.934c0.748,0.749,1.78,1.222,2.92,1.222h14.453V41.27 c0,1.142,0.453,2.176,1.201,2.922c0.748,0.748,1.777,1.211,2.919,1.211c2.282,0,4.129-1.851,4.129-4.133V26.857h14.435 c2.283,0,4.134-1.867,4.133-4.15C45.399,20.425,43.548,18.557,41.267,18.557z"></path> </g> </g>
                    </svg>
                </button>
                <button class="delete-button text-danger deletecustomer">
                    <svg class="delete-svgIcon" viewBox="0 0 448 512">
                        <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"></path>
                    </svg>
                </button>
            </div>


        </div>



        <div class="popup"></div>

        <div id="myTabContent">
            @RenderBody()
        </div>
    </div>
    <script src="~/js/main.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery UI library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

    <!-- jQuery UI CSS -->
    <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    .delete-button, .add-button , .edit-button {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: white;
        border: none;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.164);
        cursor: pointer;
        transition-duration: 0.3s;
        overflow: hidden;
        position: relative;
    }

        .add-svgIcon path {
            fill: #0dcaf0;
        }

    .delete-svgIcon, .add-svgIcon , .edit-svgIcon{
        width: 15px;
        transition-duration: 0.3s;
    }

        .delete-svgIcon path {
            fill: red;
        }

    .delete-button:hover , .add-button:hover , .edit-button:hover{
        width: 90px;
        border-radius: 50px;
        transition-duration: 0.3s;
        background-color: white;
        align-items: center;
    }

        .delete-button:hover .delete-svgIcon ,
        .add-button:hover .add-svgIcon,
        .edit-button:hover .edit-button{
            width: 20px;
            transition-duration: 0.3s;
            transform: translateY(60%);
            -webkit-transform: rotate(360deg);
            -moz-transform: rotate(360deg);
            -o-transform: rotate(360deg);
            -ms-transform: rotate(360deg);
            transform: rotate(360deg);
        }

    .delete-button::before {
        display: none;
        content: "Delete";
        color: red;
        transition-duration: 0.3s;
        font-size: 2px;
    }
    .add-button::before{
        display: none;
        content: "Add";
        color: #0dcaf0;
        transition-duration: 0.3s;
        font-size: 5px;
    }
    .edit-button::before{
        display: none;
        content: "Edit";
        /*color: #0dcaf0;*/
        transition-duration: 0.3s;
        font-size: 5px;
    }
    .delete-button:hover::before , .add-button:hover::before , .edit-button::before{
        display: block;
        padding-right: 10px;
        font-size: 13px;
        opacity: 1;
        transform: translateY(0px);
        transition-duration: 0.3s;
    }
</style>